<%- include('./templates/header') %>

<h2 class="mb-4">Hello, <%= name %></h2>

<% if (typeof userType !== 'undefined' && userType === 'admin') { %>
  <div class="alert alert-info mb-4">
    You are an admin user. <a href="/admin">Go to Admin Panel</a>
  </div>
<% } %>

<div class="row">
    <% 
    const images = [
        'photo-1735657090719-7f92cb44170b.avif',
        'photo-1735657090869-a81c50626bd3.avif',
        'photo-1735657061774-a9d62d06c954.avif'
    ];
    
    images.forEach(function(image) { 
    %>
        <div class="col-md-4 col-lg-4 mb-4">
            <img src="/<%= image %>" class="img-fluid" alt="Image">
        </div>
    <% }); %>
</div>

<div class="mt-3">
    <a href="/logout" class="btn btn-primary">Sign out</a>
</div>

<%- include('./templates/footer') %>
